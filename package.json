    "express": "^5.2.1",
    "grammy": "^1.40.0",
    "picomatch": "^4.0.3",
    "playwright-core": "1.58.2",
    "postgres": "^3.4.8",
    "proper-lockfile": "^4.1.2",
    "qrcode-terminal": "^0.12.0",
    "sharp": "^0.34.5",
    "tslog": "^4.10.2",
    "undici": "^7.22.0",
    "ws": "^8.19.0",
    "yaml": "^2.8.2",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@grammyjs/types": "^3.24.0",
    "@types/express": "^5.0.6",
    "@types/node": "^25.2.3",
    "@types/picomatch": "^4.0.2",
    "@types/proper-lockfile": "^4.1.4",
    "@types/qrcode-terminal": "^0.12.2",
    "@types/ws": "^8.18.1",
    "@vitest/coverage-v8": "^4.0.18",
    "oxfmt": "0.32.0",
    "oxlint": "^1.47.0",
    "tsdown": "^0.20.3",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  },
  "engines": {
    "node": ">=22.12.0"
  },
  "packageManager": "pnpm@10.23.0",
  "pnpm": {
    "onlyBuiltDependencies": [
      "@whiskeysockets/baileys",
      "protobufjs",
      "sharp"
    ]
  }
